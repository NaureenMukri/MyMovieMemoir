<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryDark"
    tools:context=".MemoirView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/memoirSelected_movieImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="27dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/memoirSelected_country"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_directorLabel"
                app:layout_constraintStart_toEndOf="@+id/memoirSelected_countryLabel"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_cast"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/memoirSelected_name"
                android:layout_width="411dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_movieImage" />

            <TextView
                android:id="@+id/memoirSelected_releaseYearLabel"
                android:layout_width="206dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Release Year :"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_genreLabel"
                app:layout_constraintEnd_toStartOf="@+id/memoirSelected_releaseYear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_name" />

            <TextView
                android:id="@+id/memoirSelected_releaseYear"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_genre"
                app:layout_constraintStart_toEndOf="@+id/memoirSelected_releaseYearLabel"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_name" />

            <TextView
                android:id="@+id/memoirSelected_genreLabel"
                android:layout_width="206dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Movie Genre :"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_castLabel"
                app:layout_constraintEnd_toStartOf="@+id/memoirSelected_genre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_releaseYear" />

            <TextView
                android:id="@+id/memoirSelected_genre"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_castLabel"
                app:layout_constraintStart_toEndOf="@+id/memoirSelected_genreLabel"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_releaseYear" />

            <TextView
                android:id="@+id/memoirSelected_castLabel"
                android:layout_width="206dp"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Cast :"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_countryLabel"
                app:layout_constraintEnd_toStartOf="@+id/memoirSelected_cast"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_genreLabel" />

            <TextView
                android:id="@+id/memoirSelected_cast"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_countryLabel"
                app:layout_constraintStart_toEndOf="@+id/memoirSelected_castLabel"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_genre"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/memoirSelected_countryLabel"
                android:layout_width="206dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Country :"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_directorLabel"
                app:layout_constraintEnd_toStartOf="@+id/memoirSelected_country"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_castLabel" />

            <TextView
                android:id="@+id/memoirSelected_director"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_summaryLabel"
                app:layout_constraintStart_toEndOf="@+id/memoirSelected_directorLabel"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_country"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/memoirSelected_summaryLabel"
                android:layout_width="206dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="Movie Summary :"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintEnd_toStartOf="@+id/memoirSelected_summary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_directorLabel" />

            <TextView
                android:id="@+id/memoirSelected_summary"
                android:layout_width="202dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/memoirSelected_summaryLabel"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_director" />

            <TextView
                android:id="@+id/memoirSelected_movieRating"
                android:layout_width="411dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_summaryLabel" />

            <TextView
                android:id="@+id/memoirSelected_directorLabel"
                android:layout_width="206dp"
                android:layout_height="44dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="Movie Director(s) :"
                android:textColor="#000000"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/memoirSelected_summaryLabel"
                app:layout_constraintEnd_toStartOf="@+id/memoirSelected_director"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_countryLabel" />

            <Button
                android:id="@+id/btn_memoirback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="163dp"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary"
                android:text="Go Back"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_movieRating" />


            <RatingBar
                android:id="@+id/ratingBar_memoirImDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="84dp"
                android:numStars="5"
                android:rating="3.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/memoirSelected_summaryLabel"
                android:clickable="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>